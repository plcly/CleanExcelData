<Window x:Class="CleanExcelData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanExcelData"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Margin="0 20 0 0">
            <TextBlock Text="请输入文件夹目录地址：" FontSize="20"></TextBlock>
            <TextBox Height="40" FontSize="20" x:Name="txtFolder"></TextBox>

        </StackPanel>
        <Button Grid.Row="1" Height="50" Width="200" Content="开始转换" x:Name="btnBegin" Click="Button_Click" ></Button>
        <StackPanel Grid.Row="2">
            <ProgressBar  x:Name="proBar" Height="20" Minimum="0" Maximum="100"></ProgressBar>
            <TextBlock x:Name="txtMsg"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
